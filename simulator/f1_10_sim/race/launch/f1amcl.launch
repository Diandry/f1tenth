<?xml version="1.0"?>
<launch>

  <arg name="use_map_topic" default="true"/>
  <arg name="scan_topic" default="scan" />


  <node pkg="amcl" type="amcl" name="amcl">

    <!--<remap from="scan" to="$(arg scan_topic)"/>-->
    <!-- OVERALL FILTER PARAMETERS -->
    <param name="min_particles" value="75"/>
    <!-- <param name="max_particles" value="2000"/> -->
    <param name="max_particles" value="2500"/>
    <!-- Maximum error between the true distribution and the estimated distribution. -->
    <param name="kld_err" value="0.05"/>
    <param name="kld_z" value="0.99"/>
    <!-- Translational movement required before performing a filter update.  -->
    <param name="update_min_d" value="0.2"/>
    <!--Rotational movement required before performing a filter update. -->
    <param name="update_min_a" value="0.314"/>
    <!-- Number of filter updates required before resampling. -->
    <!-- <param name="resample_interval" value="1"/> -->
    <param name="resample_interval" value="2"/>
    <!-- Increase tolerance because the computer can get quite busy -->
    <!-- <param name="transform_tolerance" value="1.0"/> -->
    <param name="transform_tolerance" value="0.5"/>
    <!-- Exponential decay rate for the slow average weight filter, used in deciding when to recover by adding random poses. A good value might be 0.001. -->
    <!-- <param name="recovery_alpha_slow" value="0.0"/> -->
    <param name="recovery_alpha_slow" value="0.001"/>
    <!--Exponential decay rate for the fast average weight filter, used in deciding when to recover by adding random poses. A good value might be 0.1. -->
    <param name="recovery_alpha_fast" value="0.1"/>

    <!-- Initial pose mean and covariances -->
    <!--<param name="initial_pose_x" value="0.0" />
    <param name="initial_pose_y" value="0.0" />
    <param name="initial_pose_a" value="0.0" />
    <param name="initial_cov_xx" value="0.1" />
    <param name="initial_cov_yy" value="0.1" />
    <param name="initial_cov_aa" value="0.1" />-->
    <!-- Publish scans from best pose at a max of 10 Hz -->
    <param name="gui_publish_rate" value="20.0"/>
    <param name="use_map_topic" value="$(arg use_map_topic)"/>
    <!--  When set to true, AMCL will only use the first map it subscribes to, rather than updating each time a new one is received. -->
    <param name="first_map_only" value="true"/>
    <!-- When set to true, AMCL will subscribe to the map topic rather than making a service call to receive its map.-->
    <!-- PRETTY SURE THIS ISN'T A REAL PARAMETER, NOT FOUND ON AMCL WEBSITE -->
    <!-- <param name="receive_map_topic" value="true"/> -->

    <!-- LASER MODEL PARAMETERS -->
    <!-- <param name="laser_min_range" value="0.2"/> -->
    <param name="laser_min_range" value="-1.0"/> # -1.0 means laser's reported min will be used
    <!-- <param name="laser_max_range" value="30.0"/> -->
    <param name="laser_max_range" value="-1.0"/> # -1.0 means laser's reported max will be used
    <param name="laser_max_beams" value="220"/>
    <!-- likelihood_field model uses only z_hit and z_rand - BUT DURING TESTING, CHANGING z_short AND z_max CLEARLY HAD AN EFFECT ON LOCALIZATION, SO I ADDED THEM BACK IN -->
    <param name="laser_model_type" value="likelihood_field_prob"/>
    <param name="laser_z_hit" value="9.0"/>
    <param name="laser_z_rand" value="0.1"/>
    <param name="laser_z_short" value="0.1"/>
    <param name="laser_z_max" value="0.1"/>
    <!-- FROM AMCL SITE: laser_z_hit (double, default: 0.95) -->
    <!-- <param name="laser_z_hit" value="0.5"/>
    <param name="laser_z_short" value="0.05"/>
    <param name="laser_z_max" value="0.05"/>
    <param name="laser_z_rand" value="0.4"/> -->
    <param name="laser_sigma_hit" value="0.04"/> # approximated using data from robot
    <param name="laser_lambda_short" value="0.1"/>
    <!-- Maximum distance to do obstacle inflation on map, for use in likelihood_field model. -->
    <param name="laser_likelihood_max_dist" value="2.0"/> # default: 2.0

    <!-- ODOMETRY MODEL PARAMETERS -->
    <!-- see page 102 for an explanation of each: -->
    <!-- https://www.ikg.uni-hannover.de/fileadmin/ikg/staff/thesis/finished/documents/ma_gangl.pdf -->
    <param name="odom_model_type" value="diff"/>
    <param name="odom_alpha1" value="0.2"/> # rotational error due to rotation
    <param name="odom_alpha2" value="0.2"/> # rotational error due to translation
    <param name="odom_alpha3" value="0.2"/> # translational error due to translation
    <param name="odom_alpha4" value="0.2"/> # translational error due to rotation
    <!-- THIS IS NOT USED WHEN ODOM_MODEL_TYPE IS DIFF -->
    <!-- <param name="odom_alpha5" value="0.1"/> -->

   <param name="odom_frame_id" value="odom"/>
   <param name="base_frame_id" value="base_link"/>
    <param name="global_frame_id" value="map"/>
	<param name="tf_broadcast" value="false"/>

  </node>

</launch>
